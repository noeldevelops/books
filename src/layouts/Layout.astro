---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="a record of the books we've read in Rubber Ducks Book Club" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header>
			<h1>Rubber Ducks Bookshelf</h1>
			<p class="description">A visual record of the books we've read in Rubber Ducks Book Club since 2020. Links go to Google Books. Source code and more information on <a href="https://github.com/noeldevelops/rubber-ducks-bookshelf" target="_blank">GitHub.</a></p>	
		</header>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: #F0AD3D;
		--accent-light: #f2d6a6;
		--accent-dark: #D52E26;
		--accent-gradient: linear-gradient(
			45deg,
			var(--accent),
			var(--accent-light) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background: #120a01;
		background-size: 224px;
		color: #fff;
	}
	header {
		position: sticky;
		top: 0;
		background: #120a01;
		padding: 1rem;
		z-index: 10;
	}
	header h1 {
		color: var(--accent-light);
		margin-bottom: 0.5rem;
	}
	header a {
		color: var(--accent-light);
	}
</style>
